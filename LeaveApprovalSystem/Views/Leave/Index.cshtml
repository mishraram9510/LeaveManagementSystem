@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Leave List</h2>
<a href="@Url.Action( "Index", "Employee")"><input type="submit" value="Logout" class="btn btn-default btn-danger float-end" /></a>
<div class="form-horizontal">
    <div class="control-label" style="font-size:larger;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
        @if (ViewData["LoginUser"] != null )
        {
            <p>Welcome @ViewData["LoginUser"] </p>
        }
    </div>
    <div class="col-md-offset-2 col-md-10 float-end">
        
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <td>Name</td>
            <td>From Date</td>
            <td>To Date</td>
            <td>Leave Type</td>
            <td>Reason</td>
            <td>Status</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][7]</td>
                <td>@(((DateTime)Model.Rows[i][2]).ToString("dd/MM/yyyy"))</td>
                <td>@(((DateTime)Model.Rows[i][3]).ToString("dd/MM/yyyy"))</td>
                <td>@Model.Rows[i][4]</td>
                <td>@Model.Rows[i][5]</td>
                <td>@Model.Rows[i][6]</td>
                <td><a href="@Url.Action( "Edit", "Leave", new { @id = Model.Rows[i][0] })">Edit</a></td>
                <td><a href="@Url.Action( "Delete", "Leave", new { @id = Model.Rows[i][0] })">Delete</a></td>
                @*<td>@Html.ActionLink("Edit", "Edit", "Leave", new { @id = Model.Rows[i][0] })</td>>*@
            </tr>
        }
    </table>
</div>
<div>
    <p>Want to create a new Leave? @Html.ActionLink("Create new", "Create") </p>
</div>


